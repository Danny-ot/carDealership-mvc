<!DOCTYPE html>
<html>

<head>
  <title>Danny CarDealerShip</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <style type="text/css">
  </style>
</head>

<body class="bg-secondary text-light">
  <h1 class="text-center">Danny Car Dealership</h1>
  <div class="container mt-5">
    @using CarDealership.Models;
    @if (Model.Count == 0)
    {
      <p class="h5 text-center">There are no cars yet</p>
    }
    else
    {
      <p class="text-center h5">This Are the Cars You Have Created</p>
      <div class="row justify-content-around mt-3">
        @foreach (Car car in Model)
        {
          string carColor = car.Colour.ToLower();
          @if(carColor == "white"){
            carColor = "black";
          }
          <div class="car col-md-3 text-center py-5 m-3" style="background-color: @carColor;">
            <h1 class="text-center">@car.Name</h1>
            <h5>Model - @car.Model model</h5>
            <h5>Colour - @carColor</h5>
            <h5>Miles - @car.Miles km/hr</h5>
            <h5 class="text-center bg-light mt-3 py-3 h5" style="color: @carColor;">$@car.Price</h5>
          </div>
        }
      </div>
    }
  <p class="text-center"><a href="/cars/form" class="h6 btn btn-info mt-4">Add New Car</a></p>
  </div>
</body>

</html>